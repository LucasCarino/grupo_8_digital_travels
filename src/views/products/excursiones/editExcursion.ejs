<!DOCTYPE html>
<html lang="es">
<%- include('../../partials/head') %>

<body>
    <div class="container">
        <%- include('../../partials/header__min') %>
        <main class="register__main">
            <h1 class="user-form-title">Editando <%= product.name %></h1>
            <form class="register__form" action="/hoteles/edit/<%= product.id %>" method="POST"
                enctype="multipart/form-data">
                <div>
                    <input type="text" name="name" id="name" required placeholder=" " value="<%= product.name %>">
                    <label for="name">Nombre del hotel</label>
                </div>
                <div>
                    <input type="text" name="destination" id="destination" required placeholder=" "
                        value="<%= product.destination %>">
                    <label for="destination">Destino</label>
                </div>
                <div>
                    <label for="description" id="textarea-label">Descripci√≥n</label>
                    <textarea id="description" name="description" required
                        placeholder=" "><%= product.description %></textarea>
                </div>
                <div>
                    <input type="number" id="price" name="price" required placeholder=" " value="<%= product.price %>">
                    <label for="price">Precio</label>
                </div>
                <div>
                    <input type="file" id="image" name="image">
                    <label for="image">Imagen</label>
                </div>

                <button type="submit" class="submit-button">Editar</button>
            </form>
        </main>
        <%- include('../../partials/footer__min2') %>
    </div>

</body>

</html>